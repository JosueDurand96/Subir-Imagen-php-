<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ScrollViewContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Subir Imagen Al Servidor</item>
        <item name="android:fontFamily">sanf_serif</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Separador">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">Introduce Nombre De Imagen</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SelectButton">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape</item>
        <item name="android:text">Seleccionar Imagen</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
    </style>

    <style name="ContainerButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="UploadButton">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/shape</item>
        <item name="android:text">Subir</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:visibility">gone</item>
    </style>


</resources>
